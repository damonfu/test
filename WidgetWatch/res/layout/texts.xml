<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_height="match_parent"
	android:layout_width="match_parent">

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/LinearLayout01"
		android:layout_height="wrap_content" android:orientation="vertical"
		android:layout_width="match_parent">

		<LinearLayout android:id="@+id/LinearLayout02"
			android:layout_width="wrap_content" android:layout_height="wrap_content">
			<Button android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/btn_enable"
				android:text="@string/enable_all"></Button>
			<Button android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/btn_disable"
				android:text="@string/disable_all"></Button>

		</LinearLayout>

		<EditText android:id="@+id/EditText01"
			android:layout_height="wrap_content"
			android:layout_width="200dip"
			android:gravity="center_vertical"
			android:text="@string/button_next">
		</EditText>

		<EditText
			android:layout_height="wrap_content"
			android:layout_width="200dip"
			android:gravity="center_vertical"
			android:text="@string/button_next">
		</EditText>

				<EditText
			android:layout_height="wrap_content"
			android:layout_width="200dip"
			android:gravity="center_vertical"
			android:text="@string/button_next">
		</EditText>

		<EditText
			android:layout_height="wrap_content"
			android:layout_width="200dip"
			android:gravity="center_vertical"
			android:text="@string/button_next">
		</EditText>

		<EditText
			android:layout_height="wrap_content"
			android:layout_width="200dip"
			android:gravity="center_vertical"
			android:text="@string/button_next">
		</EditText>

		<EditText
			android:layout_height="wrap_content"
			android:layout_width="200dip"
			android:gravity="center_vertical"
			android:text="@string/button_next">
		</EditText>

		<EditText
			android:layout_height="wrap_content"
			android:layout_width="200dip"
			android:gravity="center_vertical"
			android:text="@string/button_next">
		</EditText>

		<EditText android:id="@+id/EditText02" android:layout_height="wrap_content"
			android:layout_width="match_parent" android:password="true"
			android:text="@string/button_next">
		</EditText>


		<TextView android:id="@+id/TextView01" android:layout_width="50dip"
			android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge"
			android:focusable="true" android:focusableInTouchMode="true"
			android:clickable="true" android:singleLine="true" android:ellipsize="none"
			android:text="@string/text_color_primary">
		</TextView>

		<TextView android:id="@+id/TextView02" android:layout_width="50dip"
			android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge"
			android:textColor="?android:attr/textColorSecondary"
			android:focusable="true" android:focusableInTouchMode="true"
			android:ellipsize="marquee" android:singleLine="true"
			android:text="@string/text_color_secondary">
		</TextView>

		<TextView android:id="@+id/TextView03" android:layout_width="50dip"
			android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge"
			android:textColor="?android:attr/textColorTertiary"
			android:focusable="true" android:singleLine="true"
			android:focusableInTouchMode="true">
		</TextView>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView android:id="@+id/align_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="40sp"
                android:text="@string/one"/>
            <TextView android:id="@+id/align_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_toRightOf="@+id/align_1"
                android:layout_alignBaseline="@+id/align_1"
                android:textSize="18sp"
                android:text="@string/list"/>
            <TextView android:id="@+id/align_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_toRightOf="@+id/align_2"
                android:layout_alignBaseline="@+id/align_1"
                android:textSize="40sp"
                android:text="@string/two"/>
            <TextView android:id="@+id/align_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_toRightOf="@+id/align_3"
                android:layout_alignBaseline="@+id/align_1"
                android:textSize="18sp"
                android:text="@string/list"/>
        </RelativeLayout>
		<TextView android:id="@+id/TextView04"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:textAppearance="?android:attr/textAppearanceMedium"
		    android:paddingLeft="6dp"
		    android:text="@string/text_search">
		</TextView>


	</LinearLayout>


</ScrollView>
