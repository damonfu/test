<?xml version="1.0" encoding="utf-8"?>
<yi.widget.CheckableItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="?android:attr/listPreferredItemHeight"	
	android:layout_width="match_parent"
	android:paddingLeft="14dip"
	>
     <ImageView
         android:id="@+id/image1"  
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:adjustViewBounds="true"
         android:maxWidth="21dip"
         android:maxHeight="21dip"
         android:layout_alignParentLeft="true"
         android:layout_alignParentTop="true"
         android:layout_marginRight="5dip"
         android:layout_marginTop="10dip"/>

		
	 <TextView android:id="@+id/text1" 
	 	android:ellipsize="end"
   		android:layout_width="wrap_content" 
   		android:layout_height="wrap_content"	   		    		   	   	
	   	android:layout_toRightOf="@+id/image1"
	   	android:layout_toLeftOf="@+id/layout2"
	   	android:singleLine="true"
   		android:layout_alignWithParentIfMissing="true"
   		android:layout_alignParentTop="true"
                android:layout_marginRight="16dip"
   		android:layout_marginTop="9dip"
		style="@style/Yi.ListItem.TextAppearance.Large"
		/>
   		
   	 <TextView android:id="@+id/text2" 
	 	android:ellipsize="end"
   		android:layout_width="wrap_content" 
   		android:layout_height="wrap_content"
	   	android:layout_toLeftOf="@+id/layout2"		
	   	android:singleLine="true"  		    		   		
   		android:layout_alignWithParentIfMissing="true"
   		android:layout_alignParentLeft="true"
   		android:layout_alignParentBottom="true"
   		android:layout_alignLeft="@+id/image1"
                android:layout_marginRight="16dip"
   		android:layout_marginBottom="9dip" 
		style="@style/Yi.ListItem.TextAppearance.Small"
		/>	


    	<RelativeLayout android:id="@+id/layout2"
            android:layout_width="72dip"
            android:layout_height="wrap_content"	   		    		   	   	
            android:orientation="vertical"
	    android:layout_toLeftOf="@+id/image_layout"
   	    android:layout_alignWithParentIfMissing="true"
   	    android:layout_marginRight="13dip" 
   	    android:layout_marginTop="13dip" 
   	    android:layout_marginBottom="9dip" 
        >
	     <TextView android:id="@+id/text3" 
	 	android:ellipsize="end"
   		android:layout_width="wrap_content" 
   		android:layout_height="wrap_content"	   		    		   	   	
	   	android:singleLine="true" 
   		android:maxWidth="72sp"
   		android:layout_alignParentRight="true"
   		android:layout_alignParentTop="true"
		style="@style/Yi.ListItem.TextAppearance.Small"
		android:textColor="@color/yi_text_blue1"
   		/>
   		
   	     <TextView android:id="@+id/text4" 
	 	android:ellipsize="end"
   		android:layout_width="wrap_content" 
   		android:layout_height="wrap_content"	   		    		   	 		    
	   	android:singleLine="true"
   		android:maxWidth="72sp"
   		android:layout_alignParentRight="true"
   		android:layout_alignParentBottom="true"
		style="@style/Yi.ListItem.TextAppearance.Small"
   		/>
   	 </RelativeLayout>
    	
	 <include layout="@layout/yi_list_item_image"/> 
	    	 
</yi.widget.CheckableItemLayout>
