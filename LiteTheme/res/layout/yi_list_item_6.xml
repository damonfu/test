<?xml version="1.0" encoding="utf-8"?>
<yi.widget.CheckableItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="?android:attr/listPreferredItemHeight"	
	android:layout_width="fill_parent"	
    android:paddingRight="6dip"
	>
		
	 <TextView android:id="@+id/text1" 
	 	android:ellipsize="end"
   		android:layout_width="wrap_content" 
   		android:layout_height="wrap_content"	   		    		   	   	
	   	android:singleLine="true" 
   		android:maxWidth="207sp"   		
   		android:layout_marginLeft="15dip" 
   		android:layout_marginTop="7dip"
		style="@style/Yi.ListItem.TextAppearance.Large"
		/>

	<RatingBar android:id="@+id/ratingbar"
		style="?android:attr/ratingBarStyleSmall"
		android:numStars="5"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true" 
		android:layout_marginBottom="10dip" 
		android:layout_marginLeft="15dip"    		
		/>	

	<ImageView android:id="@+id/image1"  
		android:layout_height="wrap_content"
		android:layout_width="wrap_content" 
		android:layout_centerVertical="true"	    
		android:layout_toRightOf="@+id/ratingbar"
		android:layout_alignWithParentIfMissing="true" 
		android:layout_alignParentBottom="true" 
		android:layout_marginBottom="10dip" 
		android:layout_marginLeft="10dip"    		
		android:adjustViewBounds="true"
		android:maxHeight="20dip" 
		android:maxWidth="20dip"   		
		/>	
   		   		
   	 <TextView android:id="@+id/text2" 
	 	android:ellipsize="end"
   		android:layout_width="wrap_content" 
   		android:layout_height="wrap_content"	   		    		   	
	   	android:singleLine="true"
   		android:maxWidth="207sp"   		 
   		android:layout_toRightOf="@+id/image1"
   		android:layout_alignWithParentIfMissing="true" 
   		android:layout_alignParentBottom="true" 
   		android:layout_marginBottom="10dip" 
   		android:layout_marginLeft="10dip"
		style="@style/Yi.ListItem.TextAppearance.Small"
		/>	
    	
	 <TextView android:id="@+id/text3" 
	 	android:ellipsize="end"
   		android:layout_width="wrap_content" 
   		android:layout_height="wrap_content"	   		    		   	   	
	   	android:singleLine="true" 
   		android:maxWidth="207sp"   		
   		android:layout_marginRight="15dip" 
   		android:layout_marginTop="13dip" 
   		android:layout_alignParentRight="true"
		style="@style/Yi.ListItem.TextAppearance.Small"
   		/>
   		
   	 <TextView android:id="@+id/text4" 
	 	android:ellipsize="end"
   		android:layout_width="wrap_content" 
   		android:layout_height="wrap_content"	   		    		   	   
	   	android:singleLine="true"
   		android:maxWidth="207sp"   		    		
   		android:layout_alignParentBottom="true" 
   		android:layout_marginBottom="10dip" 
   		android:layout_marginRight="15dip" 
   		android:layout_alignParentRight="true"
		style="@style/Yi.ListItem.TextAppearance.Small"
   		/>	
	 
</yi.widget.CheckableItemLayout>
