<?xml version="1.0" encoding="utf-8"?>
<yi.widget.CheckableItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="?android:attr/listPreferredItemHeight"
	android:layout_width="fill_parent"	
    android:paddingRight="6dip"
	>
	<ImageView android:id="@+id/image1"  
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content"
	    android:layout_centerVertical="true"
	    android:layout_alignParentLeft="true"	    	    
	    android:layout_marginLeft="10dip"
		/>
	
	<ProgressBar android:id="@+id/progressbar" 
		style="?android:attr/progressBarStyleHorizontal"
		android:layout_height="14dip"
		android:layout_width="0dip"   		
		android:layout_toRightOf="@+id/image1"
		android:layout_toLeftOf="@+id/image2"   		   		    		   	       		   		    		   
		android:layout_alignParentBottom="true" 
		android:layout_marginBottom="15dip" 
		android:layout_marginLeft="10dip"
		android:layout_marginRight="10dip" 
		android:clickable="false"
		/>
		
	 <TextView android:id="@+id/text1" 
	 	android:ellipsize="end"
   		android:layout_width="wrap_content" 
   		android:layout_height="wrap_content"
	   	android:layout_toRightOf="@+id/image1"	    		   		   	
	   	android:singleLine="true"
   		android:maxWidth="207sp"
   		android:layout_alignWithParentIfMissing="true"
   		android:layout_marginLeft="10dip" 
   		android:layout_marginTop="7dip" 
		style="@style/Yi.ListItem.TextAppearance.Large"
   		/>
    	
	 <TextView android:id="@+id/text2" 
	 	android:ellipsize="end"
   		android:layout_width="wrap_content" 
   		android:layout_height="wrap_content"
	   	android:layout_toLeftOf="@+id/image2"	    		   		   	
	   	android:singleLine="true" 
   		android:maxWidth="207sp"
   		android:layout_alignWithParentIfMissing="true"
   		android:layout_marginRight="10dip" 
   		android:layout_marginTop="13dip"
		style="@style/Yi.ListItem.TextAppearance.Small"
		/>   		
 
	<ImageView android:id="@+id/image2"  
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content"
	    android:layout_centerVertical="true"
	    android:layout_alignParentRight="true"	    	    
	    android:layout_marginRight="10dip"
		/>

</yi.widget.CheckableItemLayout>
