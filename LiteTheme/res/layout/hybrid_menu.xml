<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/baidu_hybrid_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/baidu_blur_mask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/baidu_dimmed_mask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/content_mask"
        android:visibility="gone" />

    <yi.support.v1.menu.HybridMenuPanel
        android:id="@+id/baidu_menu_panel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom" >

        <ImageView
		    android:id="@+id/baidu_menu_panel_shadow"
	        android:layout_width="match_parent"
	        android:layout_height="18dp" />

		<RelativeLayout
		    android:id="@+id/baidu_menu_panel_view"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content">
		    
		    <RelativeLayout
                    android:id="@+id/baidu_action_container"
                    android:layout_width="match_parent"
                    android:layout_height="0dp" />

            <RelativeLayout
                android:id="@+id/baidu_menu_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

		    <ImageView
		        android:id="@+id/baidu_menu_more"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentRight="true"/>

		</RelativeLayout>

    </yi.support.v1.menu.HybridMenuPanel>

</FrameLayout>
