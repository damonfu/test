<?xml version="1.0" encoding="utf-8"?>
<yi.widget.CheckableItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="?android:attr/listPreferredItemHeight"
	android:layout_width="match_parent"
	>
	
	<include layout="@layout/yi_list_item_left_image"/>
	
	 <TextView android:id="@+id/text1" 
	 	android:ellipsize="end"
   		android:layout_width="wrap_content" 
   		android:layout_height="wrap_content"  		   		   	
	   	android:singleLine="true" 
	   	android:layout_toRightOf="@+id/image1"	  
	   	android:layout_toLeftOf="@+id/layout2"
   		android:layout_alignWithParentIfMissing="true"
   		android:layout_marginLeft="13dip"
                android:layout_marginRight="16dip"
	    android:layout_centerVertical="true"
		style="@style/Yi.ListItem.TextAppearance.Large"
   		/>
    
    <RelativeLayout android:id="@+id/layout2"
        android:layout_width="72dip"
   		android:layout_height="wrap_content"	   		    		   	   	
        android:orientation="vertical"
		android:layout_toLeftOf="@+id/image2"
   		android:layout_alignWithParentIfMissing="true"
   		android:layout_marginRight="13dip" 
   		android:layout_marginTop="13dip" 
   		android:layout_marginBottom="9dip" 
        >
        
	 <TextView android:id="@+id/text3" 
   		android:layout_width="wrap_content" 
   		android:layout_height="wrap_content"	   		    		   	   	
   		android:maxWidth="72sp"
	 	android:ellipsize="end"
	   	android:singleLine="true"
        android:layout_alignParentRight="true"
   		android:layout_alignParentTop="true"
		style="@style/Yi.ListItem.TextAppearance.Small"
   		/>
   		
   	 <TextView android:id="@+id/text4" 
   		android:layout_width="wrap_content" 
   		android:layout_height="wrap_content"	   		    		   	 		    
   		android:maxWidth="72sp"
	 	android:ellipsize="end"
	   	android:singleLine="true" 
        android:layout_alignParentRight="true"
   		android:layout_alignParentBottom="true" 
		style="@style/Yi.ListItem.TextAppearance.Small"
   		/>	
 
    </RelativeLayout>

	 <include layout="@layout/yi_list_item_right_image"/> 
	 
</yi.widget.CheckableItemLayout>
